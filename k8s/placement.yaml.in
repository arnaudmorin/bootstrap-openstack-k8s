---
apiVersion: v1
kind: Service
metadata:
  name: placement
spec:
  selector:
    app: placement
  ports:
  - port: 8778

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: placement
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: placement.{{.domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: placement
            port:
              number: 8778

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: placement
  labels:
    app: placement
spec:
  replicas: 1
  selector:
    matchLabels:
      app: placement
  template:
    metadata:
      labels:
        app: placement
    spec:
      containers:
      - name: placement
        image: arnaudmorin/openstack-placement:victoria
        # imagePullPolicy: Always
        ports:
        - containerPort: 8778
        volumeMounts:
        - name: placement-conf
          mountPath: "/etc/placement/placement.conf"
          subPath: "placement.conf"
      volumes:
      - name: placement-conf
        configMap:
          name: placement-conf
