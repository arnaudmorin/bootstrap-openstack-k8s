---
apiVersion: v1
kind: Service
metadata:
  name: keystone
spec:
  selector:
    app: keystone
  ports:
  - port: 5000

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: keystone
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: keystone.{{ .domain }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: keystone
            port:
              number: 5000

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keystone
  labels:
    app: keystone
spec:
  replicas: 3
  selector:
    matchLabels:
      app: keystone
  template:
    metadata:
      labels:
        app: keystone
    spec:
      containers:
      - name: keystone
        image: arnaudmorin/openstack-keystone:victoria
        #imagePullPolicy: Always
        ports:
        - containerPort: 5000
        volumeMounts:
        - name: keystone-conf
          mountPath: "/etc/keystone/keystone.conf"
          subPath: "keystone.conf"
        - name: fernet-keys
          mountPath: "/etc/keystone/fernet-keys/"
      volumes:
      - name: keystone-conf
        configMap:
          name: keystone-conf
      - name: fernet-keys
        configMap:
          name: keystone-fernet
