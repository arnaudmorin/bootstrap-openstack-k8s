---
#
# KEYSTONE
#
apiVersion: v1
kind: ConfigMap
metadata:
  name: initdb-{{ .db_name }}
data:
  initdb.sql: |-
    CREATE DATABASE {{ .db_name }};
    {{if (eq .db_name "nova")}}
    CREATE DATABASE nova_cell0;
    CREATE DATABASE nova_api;
    {{end}}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: mysql-pv-claim-{{ .db_name }}
spec:
  storageClassName: local-path
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi
---
apiVersion: v1
kind: Service
metadata:
  name: mysql-{{ .db_name }}
spec:
  selector:
    app: mysql-{{ .db_name }}
  ports:
  - port: 3306
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql-{{ .db_name }}
spec:
  selector:
    matchLabels:
      app: mysql-{{ .db_name }}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: mysql-{{ .db_name }}
    spec:
      containers:
      - image: mariadb:10.4-focal
        name: mysql-{{ .db_name }}
        env:
          # Use secret in real usage
        - name: MYSQL_ROOT_PASSWORD
          value: {{ .password }}
        ports:
        - containerPort: 3306
          name: mysql-{{ .db_name }}
        volumeMounts:
        - name: mysql-persistent-storage-{{ .db_name }}
          mountPath: /var/lib/mysql
        - name: mysql-initdb-{{ .db_name }}
          mountPath: /docker-entrypoint-initdb.d
      volumes:
      - name: mysql-persistent-storage-{{ .db_name }}
        persistentVolumeClaim:
          claimName: mysql-pv-claim-{{ .db_name }}
      - name: mysql-initdb-{{ .db_name }}
        configMap:
          name: initdb-{{ .db_name }}
