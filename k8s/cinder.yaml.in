---
apiVersion: v1
kind: Service
metadata:
  name: cinder
spec:
  selector:
    app: cinder
  ports:
  - port: 8776

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: cinder
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: cinder.{{.domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: cinder
            port:
              number: 8776

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder
  labels:
    app: cinder
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder
  template:
    metadata:
      labels:
        app: cinder
    spec:
      containers:
      - name: cinder
        image: arnaudmorin/openstack-cinder-api:wallaby
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        #securityContext:
        #  allowPrivilegeEscalation: false
        #  runAsUser: 0
        # imagePullPolicy: Always
        ports:
        - containerPort: 8776
        volumeMounts:
        - name: cinder-conf
          mountPath: "/data/"
        env:
        - name: KOLLA_CONFIG_STRATEGY
          value: 'COPY_ONCE'
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder-scheduler
  labels:
    app: cinder-scheduler
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder-scheduler
  template:
    metadata:
      labels:
        app: cinder-scheduler
    spec:
      containers:
      - name: cinder-scheduler
        image: arnaudmorin/openstack-cinder-scheduler:wallaby
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        #securityContext:
        #  allowPrivilegeEscalation: false
        #  runAsUser: 0
        # imagePullPolicy: Always
        volumeMounts:
        - name: cinder-conf
          mountPath: "/data/"
        env:
        - name: KOLLA_CONFIG_STRATEGY
          value: 'COPY_ONCE'
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder-volume
  labels:
    app: cinder-volume
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder-volume
  template:
    metadata:
      labels:
        app: cinder-volume
    spec:
      containers:
      - name: cinder-volume
        image: arnaudmorin/openstack-cinder-volume:wallaby
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        securityContext:
          privileged: true
        # imagePullPolicy: Always
        volumeMounts:
        - name: cinder-conf
          mountPath: "/data/"
        env:
        - name: KOLLA_CONFIG_STRATEGY
          value: 'COPY_ONCE'
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

