---
apiVersion: v1
kind: Service
metadata:
  name: cinder
spec:
  selector:
    app: cinder
  ports:
  - port: 8776

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: cinder
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: cinder.{{.domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: cinder
            port:
              number: 8776

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder
  labels:
    app: cinder
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder
  template:
    metadata:
      labels:
        app: cinder
    spec:
      containers:
      - name: cinder
        image: arnaudmorin/openstack-cinder:yoga
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        command: [ "/bin/bash", "-c", "--" ]
        args: [ "source /etc/apache2/envvars && /usr/sbin/apache2 -DFOREGROUND" ]
        #securityContext:
        #  allowPrivilegeEscalation: false
        #  runAsUser: 0
        # imagePullPolicy: Always
        ports:
        - containerPort: 8776
        volumeMounts:
        - name: cinder-conf
          mountPath: /etc/cinder/cinder.conf
          subPath: cinder.conf
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder-scheduler
  labels:
    app: cinder-scheduler
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder-scheduler
  template:
    metadata:
      labels:
        app: cinder-scheduler
    spec:
      containers:
      - name: cinder-scheduler
        image: arnaudmorin/openstack-cinder:yoga
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        command: [ "dumb-init", "--single-child", "--" ]
        args: [ "/var/lib/kolla/venv/bin/cinder-scheduler" ]
        #securityContext:
        #  allowPrivilegeEscalation: false
        #  runAsUser: 0
        # imagePullPolicy: Always
        volumeMounts:
        - name: cinder-conf
          mountPath: /etc/cinder/cinder.conf
          subPath: cinder.conf
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: cinder-volume
  labels:
    app: cinder-volume
spec:
  replicas: 1
  selector:
    matchLabels:
      app: cinder-volume
  template:
    metadata:
      labels:
        app: cinder-volume
    spec:
      containers:
      - name: cinder-volume
        image: arnaudmorin/openstack-cinder:yoga
        command: [ "/bin/bash", "-c", "--" ]
        args: [ "while true; do sleep 30; done;" ]
        #command: [ "dumb-init", "--single-child", "--" ]
        #args: [ "/var/lib/kolla/venv/bin/cinder-volume" ]
        securityContext:
          privileged: true
          runAsUser: 0
        # imagePullPolicy: Always
        volumeMounts:
        - name: cinder-conf
          mountPath: /etc/cinder/cinder.conf
          subPath: cinder.conf
      volumes:
      - name: cinder-conf
        configMap:
          name: cinder-conf

