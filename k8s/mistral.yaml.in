---
apiVersion: v1
kind: Service
metadata:
  name: mistral
spec:
  selector:
    app: mistral-api
  ports:
  - port: 8989

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: mistral
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: mistral.{{.domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: mistral
            port:
              number: 8989

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mistral-api
  labels:
    app: mistral-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mistral-api
  template:
    metadata:
      labels:
        app: mistral-api
    spec:
      containers:
      - name: mistral-api
        image: arnaudmorin/openstack-mistral:yoga
        #command: [ "/bin/bash", "-c", "--" ]
        #args: [ "while true; do sleep 30; done;" ]
        command: [ "/bin/bash", "-c", "--" ]
        args: [ "source /etc/apache2/envvars && /usr/sbin/apache2 -DFOREGROUND" ]
        #imagePullPolicy: Always
        ports:
        - containerPort: 8989
        volumeMounts:
        - name: mistral-conf
          mountPath: "/etc/mistral/"
      volumes:
      - name: mistral-conf
        configMap:
          name: mistral-conf

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mistral-engine
  labels:
    app: mistral-engine
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mistral-engine
  template:
    metadata:
      labels:
        app: mistral-engine
    spec:
      containers:
      - name: mistral-engine
        image: arnaudmorin/openstack-mistral:yoga
        command: [ "dumb-init", "--single-child", "--" ]
        args: [ "/var/lib/kolla/venv/bin/mistral-server", "--server", "engine", "--config-file", "/etc/mistral/mistral.conf" ]
        # imagePullPolicy: Always
        volumeMounts:
        - name: mistral-conf
          mountPath: "/etc/mistral/"
      volumes:
      - name: mistral-conf
        configMap:
          name: mistral-conf


