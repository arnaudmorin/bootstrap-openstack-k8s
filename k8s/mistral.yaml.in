        image: arnaudmorin/openstack-mistral-engine:wallaby
        # imagePullPolicy: Always
        volumeMounts:
        - name: mistral-conf
          mountPath: "/data/"
        env:
        - name: KOLLA_CONFIG_STRATEGY
          value: 'COPY_ONCE'
      volumes:
      - name: mistral-conf
        configMap:
          name: mistral-conf


