---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: glance-pv-claim
spec:
  storageClassName: local-path
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 20Gi

---
apiVersion: v1
kind: Service
metadata:
  name: glance
spec:
  selector:
    app: glance
  ports:
  - port: 9292

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: glance
  annotations:
    kubernetes.io/ingress.class: traefik
spec:
  rules:
  - host: glance.{{.domain}}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: glance
            port:
              number: 9292



---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: glance
  labels:
    app: glance
spec:
  replicas: 1
  selector:
    matchLabels:
      app: glance
  template:
    metadata:
      labels:
        app: glance
    spec:
      containers:
      - name: glance
        image: arnaudmorin/openstack-glance:wallaby
        command: [ "/bin/bash", "-c", "--" ]
        args: [ "while true; do sleep 30; done;" ]
        securityContext:
          allowPrivilegeEscalation: false
          runAsUser: 0
        imagePullPolicy: Always
        ports:
        - containerPort: 9292
        volumeMounts:
        - name: glance-conf
          mountPath: "/data/"
        - name: glance-persistent-storage
          mountPath: /var/lib/glance
        env:
        - name: KOLLA_CONFIG_STRATEGY
          value: 'COPY_ONCE'
      initContainers:
      - name: glance-data-permission-fix
        image: busybox
        command: ["/bin/chmod","-R","777", "/data"]
        volumeMounts:
        - name: glance-persistent-storage
          mountPath: /data
      volumes:
      - name: glance-conf
        configMap:
          name: glance-conf
      - name: glance-persistent-storage
        persistentVolumeClaim:
          claimName: glance-pv-claim
