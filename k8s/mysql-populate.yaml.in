---
#
# KEYSTONE JOBS
#
apiVersion: batch/v1
kind: Job
metadata:
  name: keystone-init
spec:
  template:
    spec:
      restartPolicy: Never
      # NOTE(arnaud) using initContainer to run them sequentially
      initContainers:
      - name: keystone-db-sync
        image: arnaudmorin/openstack-keystone:yoga
        command: ["keystone-manage", "db_sync"]
        volumeMounts:
        - name: keystone-conf
          mountPath: /etc/keystone/keystone.conf
          subPath: keystone.conf
        - name: keystone-conf
          mountPath: /etc/keystone/fernet-keys/0
          subPath: "0"
        - name: keystone-conf
          mountPath: /etc/keystone/fernet-keys/1
          subPath: "1"
      - name: keystone-bootstrap
        image: arnaudmorin/openstack-keystone:yoga
        command: ["keystone-manage", "bootstrap", 
          "--bootstrap-password", "{{.password}}",
          "--bootstrap-admin-url", "http://keystone.{{.domain}}/v3/",
          "--bootstrap-internal-url", "http://keystone.{{.domain}}/v3/",
          "--bootstrap-public-url", "http://keystone.{{.domain}}/v3/",
          "--bootstrap-region-id", "RegionOne"]
        volumeMounts:
        - name: keystone-conf
          mountPath: /etc/keystone/keystone.conf
          subPath: keystone.conf
        - name: keystone-conf
          mountPath: /etc/keystone/fernet-keys/0
          subPath: "0"
        - name: keystone-conf
          mountPath: /etc/keystone/fernet-keys/1
          subPath: "1"
      containers:
      - name: keystone-done
        image: arnaudmorin/openstack-keystone:yoga
        command: ["echo", "done"]
      volumes:
      - name: keystone-conf
        configMap:
          name: keystone-conf

---
#
# GLANCE JOBS
#
apiVersion: batch/v1
kind: Job
metadata:
  name: glance-init
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: glance
        image: arnaudmorin/openstack-glance:yoga
        command: ["glance-manage", "db_sync"]
        volumeMounts:
        - name: glance-conf
          mountPath: /etc/glance/glance-api.conf
          subPath: glance-api.conf
      volumes:
      - name: glance-conf
        configMap:
          name: glance-conf
  backoffLimit: 4

