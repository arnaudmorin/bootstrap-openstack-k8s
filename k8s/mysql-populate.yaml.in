---
#
# NEUTRON JOBS
#
apiVersion: batch/v1
kind: Job
metadata:
  name: neutron-init
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: neutron
        image: arnaudmorin/openstack-neutron:yoga
        command: ["neutron-db-manage", "--config-file", "/etc/neutron/neutron.conf", "--config-file", "/etc/neutron/plugins/ml2/ml2_conf.ini", "upgrade", "head"]
        volumeMounts:
        - name: neutron-conf
          mountPath: /etc/neutron/neutron.conf
          subPath: neutron.conf
        - name: neutron-conf
          mountPath: /etc/neutron/plugins/ml2/ml2_conf.ini
          subPath: ml2_conf.ini
      volumes:
      - name: neutron-conf
        configMap:
          name: neutron-conf
  backoffLimit: 4

---
#
# PLACEMENT JOBS
#
apiVersion: batch/v1
kind: Job
metadata:
  name: placement-init
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: placement
        image: arnaudmorin/openstack-placement:yoga
        command: ["placement-manage", "db", "sync"]
        volumeMounts:
        - name: placement-conf
          mountPath: /etc/placement/placement.conf
          subPath: placement.conf
      volumes:
      - name: placement-conf
        configMap:
          name: placement-conf
  backoffLimit: 4

---
#
# NOVA JOBS
#
apiVersion: batch/v1
kind: Job
metadata:
  name: nova-init
spec:
  template:
    spec:
      restartPolicy: Never
      initContainers:
      - name: nova-api-db-sync
        image: arnaudmorin/openstack-nova:yoga
        command: ["nova-manage", "api_db", "sync"]
        volumeMounts:
        - name: nova-conf
          mountPath: /etc/nova/nova.conf
          subPath: nova.conf
      - name: nova-cell0-map
        image: arnaudmorin/openstack-nova:yoga
        command: ["nova-manage", "cell_v2", "map_cell0"]
        volumeMounts:
        - name: nova-conf
          mountPath: /etc/nova/nova.conf
          subPath: nova.conf
      - name: nova-cell1-create
        image: arnaudmorin/openstack-nova:yoga
        command: ["nova-manage", "cell_v2", "create_cell", "--name=cell1", "--verbose"]
        volumeMounts:
        - name: nova-conf
          mountPath: /etc/nova/nova.conf
          subPath: nova.conf
      - name: nova-db-sync
        image: arnaudmorin/openstack-nova:yoga
        command: ["nova-manage", "db", "sync"]
        volumeMounts:
        - name: nova-conf
          mountPath: /etc/nova/nova.conf
          subPath: nova.conf
      containers:
      - name: nova-done
        image: arnaudmorin/openstack-nova:yoga
        command: ["echo", "done"]
      volumes:
      - name: nova-conf
        configMap:
          name: nova-conf

